                </div>
                <div class="col-sm-10">
                    <div class="control-group">
                        <select class="col-sm-1 control-label no-padding-left" id="trialimages_position" name="trialimages">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <option value="@i">@i</option>
