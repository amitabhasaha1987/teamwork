<script src="/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(window).load(function () {
        debugger;
        // executes when complete page is fully loaded, including all frames, objects and images
        var spinningimage = "<i class='ace-icon fa fa-spinner fa-spin orange bigger-125'></i>";

        $(document).on('click', '.deleteImages', function () {
            debugger;
            var imageid = $(this).attr('data-id');
            var obj = $(this);

            var isThumbnail = $(this).attr('data-type');
            var param;
            if (isThumbnail === 'thumbnail')
            {
                param = $.param({ "id": imageid, "type" : "thumbnail" })
            }
            else
            {
                param = $.param({ "id": imageid, "type": "" })
            }

            $.ajax({
                type: "DELETE",
                url: "/FileUpload/Removeimage?" + param,
                contentType: "application/json; charset=utf-8",
                //data: { id: imageid },
                success: function (messages) {
                    //debugger;
                    obj.closest('li').remove();
                    checkUploadLimit();
                },
                error: function () {
                    alert("please try again later");
                },
                complete: function () {
                }
            });
        });


        $("#productimagebtn").click(function (evt) {
            //debugger;
            
            var files = $("#productimage_file").get(0).files;
            if (files.length > 0) {

                $("#productimagebtn").next('span').html(spinningimage);
                var reader = new FileReader();
                //Read the contents of Image File.
                reader.readAsDataURL(files[0]);
                reader.onload = function (e) {
                    var image = new Image();
                    //Set the Base64 string return from FileReader as source.
                    image.src = e.target.result;
                    image.onload = function () {
                        var allowheight = $('#productimage_file').attr('data-height');
                        var allowwidth = $('#productimage_file').attr('data-width');
                        var allowsize = $('#productimage_file').attr('data-size');

                        if (this.height <= allowheight && this.width <= allowwidth && files[0].size <= allowsize) {
                            var data = new FormData();
                            for (i = 0; i < files.length; i++) {
                                data.append("file" + i, files[i]);
                            }
                            data.append('ProductType', $('#hiddenproducttype').val());
                            data.append('Category', $('#hiddencategory').val());
                            data.append('ProductId', $('#hiddenproductid').val());
                            data.append('ColorCode', $('input[name="colorType"]:checked').val());

                            $.ajax({
                                type: "POST",
                                url: "/FileUpload/Uploadimage",
                                contentType: false,
                                processData: false,
                                data: data,
                                success: function (messages) {
                                    //debugger;
                                    $('#productimage_ul').append(messages.Html);
                                    $("#productimagebtn").next('span').html('');
                                    $("#productimage_file").val('');
                                    checkUploadLimit();
                                },
                                error: function () {
                                    alert("Uploading failure, please try again later");
                                },
                                complete: function () {
                                    $("#productimagebtn").next('span').html('');
                                }
                            });
                        }
                        else {
                            $("#productimagebtn").next('span').html('Upload image in proper dimension and size');
                        }

                    }//image.onload
                }//reader.onload
            }//if (files.length > 0)

        }); //end of function

        $("#trialimagesbtn").click(function (evt) {
            //debugger;
            
            var files = $("#trialimages_file").get(0).files;
            if (files.length > 0) {

                $("#trialimagesbtn").next('span').html(spinningimage);
