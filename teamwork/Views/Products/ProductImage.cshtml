                            var data = new FormData();
                            for (i = 0; i < files.length; i++) {
                                data.append("file" + i, files[i]);
                            }
                            data.append('ProductType', $('#hiddenproducttype').val());
                            data.append('Category', $('#hiddencategory').val());
                            data.append('ProductId', $('#hiddenproductid').val());


                            $.ajax({
                                type: "POST",
                                url: "/FileUpload/Uploadtrialimage",
                                contentType: false,
                                processData: false,
                                data: data,
                                success: function (messages) {
                                    //debugger;
                                    $('#trialimages_ul').append(messages.Html);
                                    $("#trialimagesbtn").next('span').html('');
                                    $("#trialimages_file").val('');
                                    checkUploadLimit();
                                },
                                error: function () {
                                    alert("Uploading failure, please try again later");
                                },
                                complete: function () {
                                    $("#trialimagesbtn").next('span').html('');
                                }
                            });
                        }
                        else {
                            $("#trialimagesbtn").next('span').html('Upload image in proper dimension and size');
                        }

                    }//image.onload
                }//reader.onload
            }//if (files.length > 0)

        }); //end of function

        $("#thumbnailimagebtn").click(function (evt) {
            //debugger;
            var files = $("#thumbnailimage_file").get(0).files;
            if (files.length > 0) {

                $("#thumbnailimagebtn").next('span').html(spinningimage);
                var reader = new FileReader();
                //Read the contents of Image File.
