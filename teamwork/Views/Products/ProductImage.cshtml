                reader.onload = function (e) {
                    var image = new Image();
                    //Set the Base64 string return from FileReader as source.
                    image.src = e.target.result;
                    image.onload = function () {
                        var allowheight = $('#thumbnailimage_file').attr('data-height');
                        var allowwidth = $('#thumbnailimage_file').attr('data-width');
                        var allowsize = $('#thumbnailimage_file').attr('data-size');

                        if (this.height <= allowheight && this.width <= allowwidth && files[0].size <= allowsize) {
                            var data = new FormData();
                            for (i = 0; i < files.length; i++) {
                                data.append("file" + i, files[i]);
                            }
                            data.append('ProductType', $('#hiddenproducttype').val());
                            data.append('Category', $('#hiddencategory').val());
                            data.append('ProductId', $('#hiddenproductid').val());


                            $.ajax({
                                type: "POST",
                                url: "/FileUpload/Uploadthumbnail",
                                contentType: false,
                                processData: false,
                                data: data,
                                success: function (messages) {
                                    //debugger;
                                    $('#thumbnailimage_ul').append(messages.Html);
                                    $("#thumbnailimagebtn").next('span').html('');
                                    $("#thumbnailimage_file").val('');
                                    checkUploadLimit();
                                },
                                error: function () {
                                    alert("Uploading failure, please try again later");
                                },
                                complete: function () {
                                    $("#thumbnailimagebtn").next('span').html('');
                                }
                            });
                        }
                        else {
                            $("#thumbnailimagebtn").next('span').html('Upload image in proper dimension and size');
                        }

                    }//image.onload
                }//reader.onload
            }//if (files.length > 0)

        }); //end of function


        function checkUploadLimit()
        {

            //thumbnail
            if ($('#thumbnailimage_ul').children().length == 1) {
                $('#thumbnailimagebtn').prop('disabled', true)
            }
            else {
                $('#thumbnailimagebtn').prop('disabled', false);
            }


            //trail images
            if ($('#trialimages_ul').children().length == 5) {
                $('#trialimagesbtn').prop('disabled', true)
            }
            else {
                $('#trialimagesbtn').prop('disabled', false);
            }


            //color images
            if ($('#productimage_ul').children().length == 10) {
                $('#productimagebtn').prop('disabled', true)
            }
            else {
                $('#productimagebtn').prop('disabled', false);
            }
        }
    });
</script>