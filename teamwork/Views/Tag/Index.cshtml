@model IEnumerable<DataAccess.Models.Tag>
@{
 Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="page-header">
    <h1>
        Tag List
    </h1>
</div>

<div class="row">
    <div class="col-xs-12">
        <table id="simple-table" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Tag Name</th>
                    <th>Enable</th>
                    <th>Created</th>
                    <th></th>


                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.name
                        </td>
                        <td>
                            @(item.display_flag == 1 ? "true" : "false")
                        </td>
                        <td>
                            <span class="label label-sm label-default">@String.Format("{0:ddd, MMM d, yyyy}", item.created)</span>
                        </td>
                        <td>
                            <div class="hidden-sm hidden-xs btn-group">


                                <a class="btn btn-xs btn-danger" onclick="ConfirmDelete('@item.id');">
                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                </a>


                            </div>

                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div><!-- /.span -->
</div>
